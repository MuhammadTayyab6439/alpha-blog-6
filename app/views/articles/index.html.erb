<h1>Article indexing page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>
            <%= link_to "Show",article_path(article.id) %>
            <%= link_to "Delete",article_path(article.id), method: :delete %>
            <%= link_to"Edit",edit_article_path(article.id) %>
            </td>
        </tr>
    </tbody>
    <% end %>
</table>

<%= link_to "Creat new article", new_article_path %>